<Jumbo>
    <h2>{{@book.title}}</h2>
    <p>Great choice! Here's more info on this title.</p>
    <ShareButton @text="Check out {{@book.title}} on the TBR App!"
        @hashtags="books,reading,tbr" @via="emberjs">
        Share on Twitter
        </ShareButton>
</Jumbo>

<article class="rental detailed">
    <Book::Image src={{@book.image}} alt="A picture of {{@book.title}}" />

    <div class="details">
        <h3>About {{@book.title}}</h3>

        <div class="detail owner">
            <span>Author:</span> {{@book.author}}
        </div>
        <div class="detail type">
            <span>Genre:</span> {{@book.genre}}
        </div>
        <div class="detail location">
            <span>Length:</span> {{@book.length}}
        </div>
        <div class="detail description">
            <p>{{@book.description}}</p>
        </div>
    </div>
</article>